{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["[", "]"],
    ["{", "}"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": '"', "close": '"', "notIn": ["string", "comment"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["{", "}"],
    ["(", ")"],
    ["\\"", "\\""],
    ["'", "'"],
    ["`", "`"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(?:@(?:if|elseIf)\\b.*|\\S.*:\\s*)$",
    "decreaseIndentPattern": "^\\s*(?:@else\\b.*|[\\]\\)\\}].*)$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*/\\*.*$",
      "afterText": "^\\s*\\*/$",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*\\|.*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
