{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Collie",
  "scopeName": "source.collie",
  "fileTypes": ["collie"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#forLoop" },
    { "include": "#classesKeyword" },
    { "include": "#classAlias" },
    { "include": "#propsKeyword" },
    { "include": "#propsFields" },
    { "include": "#expressionLine" },
    { "include": "#tagHead" },
    { "include": "#classShorthand" },
    { "include": "#singleBraceInterpolation" },
    { "include": "#interpolation" },
    { "include": "#pipeText" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.collie",
          "begin": "/\\*",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.collie" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.collie" }
          },
          "patterns": [
            { "include": "#comments" }
          ]
        },
        {
          "name": "comment.line.double-slash.collie",
          "match": "//.*$",
          "captures": {
            "0": { "name": "punctuation.definition.comment.collie" }
          }
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.collie",
          "begin": "(?<!\\w)(@(if|elseIf|else))\\b",
          "beginCaptures": {
            "1": { "name": "keyword.control.directive.collie" }
          },
          "end": "(?=$|\\s)",
          "patterns": [
            {
              "name": "meta.directive.condition.collie",
              "begin": "\\(",
              "beginCaptures": {
                "0": { "name": "punctuation.section.group.begin.collie" }
              },
              "end": "\\)",
              "endCaptures": {
                "0": { "name": "punctuation.section.group.end.collie" }
              },
              "patterns": [
                { "include": "source.ts" },
                { "include": "#interpolation" }
              ]
            }
          ]
        }
      ]
    },
    "forLoop": {
      "patterns": [
        {
          "name": "meta.for-loop.collie",
          "match": "(?<!\\w)(@for)\\s+([A-Za-z_][\\w]*)\\s+(in)\\s+([A-Za-z_][\\w.\\[\\]]*)",
          "captures": {
            "1": { "name": "keyword.control.loop.collie" },
            "2": { "name": "variable.other.readwrite.collie" },
            "3": { "name": "keyword.operator.loop.collie" },
            "4": { "name": "variable.other.readwrite.collie" }
          }
        }
      ]
    },
    "classesKeyword": {
      "patterns": [
        {
          "name": "storage.type.classes.collie",
          "match": "^\\s*(classes)\\b",
          "captures": {
            "1": { "name": "storage.type.classes.collie" }
          }
        }
      ]
    },
    "classAlias": {
      "patterns": [
        {
          "name": "meta.class-alias.collie",
          "match": "^\\s+([A-Za-z_][\\w]*)\\s*=",
          "captures": {
            "1": { "name": "variable.other.constant.collie" }
          }
        }
      ]
    },
    "propsKeyword": {
      "patterns": [
        {
          "name": "storage.type.props.collie",
          "match": "^\\s*(props)\\b",
          "captures": {
            "1": { "name": "storage.type.props.collie" }
          }
        }
      ]
    },
    "propsFields": {
      "patterns": [
        {
          "name": "meta.props.field.collie",
          "begin": "^\\s*([A-Za-z_][\\w-]*)(\\??)\\s*(:)",
          "beginCaptures": {
            "1": { "name": "variable.parameter.props.collie" },
            "2": { "name": "keyword.operator.optional.collie" },
            "3": { "name": "punctuation.separator.type.collie" }
          },
          "end": "$",
          "patterns": [
            {
              "name": "storage.type.props.collie",
              "match": ".+",
              "captures": {
                "0": { "name": "storage.type.props.collie" }
              }
            }
          ]
        }
      ]
    },
    "expressionLine": {
      "patterns": [
        {
          "name": "meta.expression-line.collie",
          "begin": "^\\s*(=)\\s*",
          "beginCaptures": {
            "1": { "name": "keyword.operator.expression.collie" }
          },
          "end": "$",
          "patterns": [
            { "include": "source.tsx" }
          ]
        }
      ]
    },
    "tagHead": {
      "patterns": [
        {
          "name": "entity.name.tag.collie",
          "match": "^\\s*([A-Z][\\w]*)",
          "captures": {
            "1": { "name": "support.class.component.collie" }
          }
        },
        {
          "name": "entity.name.tag.collie",
          "match": "^\\s*([a-z][\\w-]*)",
          "captures": {
            "1": { "name": "entity.name.tag.html.collie" }
          }
        }
      ]
    },
    "classShorthand": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.class.alias.collie",
          "match": "\\.\\$([A-Za-z_][\\w-]*)",
          "captures": {
            "1": { "name": "variable.other.constant.collie" }
          }
        },
        {
          "name": "entity.other.attribute-name.class.collie",
          "match": "\\.[A-Za-z_][\\w-]*"
        },
        {
          "name": "entity.other.attribute-name.class.collie",
          "match": "^\\s*(?=\\.)((\\.[A-Za-z_][\\w-]*)+)"
        },
        {
          "name": "entity.other.attribute-name.class.collie",
          "match": "(?<=[A-Za-z0-9\\]])(\\.[A-Za-z_][\\w-]*)+"
        }
      ]
    },
    "singleBraceInterpolation": {
      "patterns": [
        {
          "name": "meta.interpolation.single-brace.collie",
          "begin": "(?<!\\{)\\{(?!\\{)",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.template-expression.begin.collie" }
          },
          "end": "(?<!\\})\\}(?!\\})",
          "endCaptures": {
            "0": { "name": "punctuation.definition.template-expression.end.collie" }
          },
          "contentName": "source.ts",
          "patterns": [
            { "include": "source.tsx" }
          ]
        }
      ]
    },
    "interpolation": {
      "patterns": [
        {
          "name": "meta.interpolation.collie",
          "begin": "\\{\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.template-expression.begin.collie" }
          },
          "end": "\\}\\}",
          "endCaptures": {
            "0": { "name": "punctuation.definition.template-expression.end.collie" }
          },
          "contentName": "source.ts",
          "patterns": [
            { "include": "source.ts" }
          ]
        }
      ]
    },
    "pipeText": {
      "patterns": [
        {
          "name": "meta.text-line.collie",
          "begin": "^\\s*(\\|)(?=\\s|$)",
          "beginCaptures": {
            "1": { "name": "keyword.operator.pipe.collie" }
          },
          "end": "$",
          "contentName": "string.unquoted.collie",
          "patterns": [
            { "include": "#interpolation" }
          ]
        }
      ]
    }
  }
}
